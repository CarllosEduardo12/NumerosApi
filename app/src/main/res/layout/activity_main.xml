<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="24dp">

    <Button
        android:id="@+id/btnGetFact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Obter fato aleatório" />

    <Button
        android:id="@+id/btnGetDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Obter fato sobre uma data"/>

    <Button
        android:id="@+id/btnGetYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Obter Fato sobre um ano"/>

    <TextView
        android:id="@+id/textFact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fato aparecerá aqui"
        android:textSize="18sp"
        android:paddingTop="24dp" />

</LinearLayout>